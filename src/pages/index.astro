---
import { getCollection } from 'astro:content';
import CallToAction from '../components/CallToAction.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Skills from '../components/Skills.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Hello, I'm Onuralp Sezer"
					tagline="Senior Machine Learning Engineer at Ultralytics, building state-of-the-art computer vision solutions with YOLO. Passionate about Deep Learning, MLOps, and Open Source."
					align="start"
				>
					<div class="roles">
						<Pill><Icon icon="brain" size="1.33em" /> ML Engineer</Pill>
						<Pill><Icon icon="eye" size="1.33em" /> Computer Vision</Pill>
						<Pill><Icon icon="code" size="1.33em" /> Open Source</Pill>
					</div>
				</Hero>

				<div class="hero-image-container">
					<img
						alt="Onuralp Sezer - Senior Machine Learning Engineer"
						width="480"
						height="620"
						src="https://github.com/onuralpszr.png"
					/>
					<div class="bounding-box">
						<span class="bbox-label">ML_Engineer 0.99</span>
					</div>
					<div class="github-status-bubble" aria-live="polite">
						<p class="status-heading">
							<Icon icon="github-logo" size="1em" />
							Dev Signal
						</p>
						<p class="status-presence">
							<span class="status-dot" aria-hidden="true"></span>
							<span id="github-status-text">Active this week</span>
						</p>
						<p class="status-metrics">
							<Icon icon="github-logo" size="0.95em" />
							<span id="github-followers">--</span>
							followers •
							<span id="github-repos">--</span>
							repos
						</p>
						<p class="status-metrics">
							<Icon icon="huggingface-logo" size="0.95em" />
							<span id="hf-models">--</span>
							models •
							<span id="hf-datasets">--</span>
							datasets •
							<span id="hf-spaces">--</span>
							spaces
						</p>
					</div>
				</div>
			</header>

			<Skills />
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Featured Projects</h3>
					<p>Some of the key projects I've contributed to and maintained in the ML/CV space.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						View All
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>

			<section class="section with-background bg-variant">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Community & Open Source</h3>
					<p>
						Active contributor to Fedora Project, GDG Samsun organizer, and Hacktoberfest participant.
					</p>
				</header>

				<div class="gallery">
					<Grid variant="small">
						{
							['Ultralytics', 'Fedora Project', 'openSUSE', 'OpenCV', 'GDG Samsun', 'Hacktoberfest', 'SAHI'].map((brand) => (
								<li class="mention-card cv-target cv-bbox-hover">
									<div class="bbox-overlay"></div>
									<p>{brand}</p>
								</li>
							))
						}
					</Grid>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<script>
	const githubFollowers = document.getElementById('github-followers');
	const githubRepos = document.getElementById('github-repos');
	const githubStatusText = document.getElementById('github-status-text');
	const hfModels = document.getElementById('hf-models');
	const hfDatasets = document.getElementById('hf-datasets');
	const hfSpaces = document.getElementById('hf-spaces');

	const formatNumber = (value: number) => new Intl.NumberFormat('en-US').format(value);

	const loadGithubStatus = async () => {
		const [userResult] = await Promise.allSettled([
			fetch('https://api.github.com/users/onuralpszr'),
		]);

		const userResponse = userResult.status === 'fulfilled' ? userResult.value : null;

		if (userResponse?.ok) {
			const user = await userResponse.json();
			if (githubFollowers) githubFollowers.textContent = formatNumber(user.followers ?? 0);
			if (githubRepos) githubRepos.textContent = formatNumber(user.public_repos ?? 0);
			if (githubStatusText) githubStatusText.textContent = 'Public profile online';
			return;
		}

		if (githubStatusText) githubStatusText.textContent = 'GitHub stats temporarily unavailable';
	};

	const loadHuggingFaceStatus = async () => {
		const [modelsResult, datasetsResult, spacesResult] = await Promise.allSettled([
			fetch('https://huggingface.co/api/models?author=onuralpszr&full=false&config=false'),
			fetch('https://huggingface.co/api/datasets?author=onuralpszr&full=false'),
			fetch('https://huggingface.co/api/spaces?author=onuralpszr&full=false'),
		]);

		const modelsResponse = modelsResult.status === 'fulfilled' ? modelsResult.value : null;
		const datasetsResponse = datasetsResult.status === 'fulfilled' ? datasetsResult.value : null;
		const spacesResponse = spacesResult.status === 'fulfilled' ? spacesResult.value : null;

		if (modelsResponse?.ok) {
			const models = await modelsResponse.json();
			if (hfModels) hfModels.textContent = formatNumber(Array.isArray(models) ? models.length : 0);
		}

		if (datasetsResponse?.ok) {
			const datasets = await datasetsResponse.json();
			if (hfDatasets) hfDatasets.textContent = formatNumber(Array.isArray(datasets) ? datasets.length : 0);
		}

		if (spacesResponse?.ok) {
			const spaces = await spacesResponse.json();
			if (hfSpaces) hfSpaces.textContent = formatNumber(Array.isArray(spaces) ? spaces.length : 0);
		}
	};

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', () => {
			loadGithubStatus();
			loadHuggingFaceStatus();
		}, { once: true });
	} else {
		loadGithubStatus();
		loadHuggingFaceStatus();
	}
</script>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.roles {
		margin-top: 0.5rem;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.5rem;
	}

	.hero-image-container {
		position: relative;
		display: inline-block;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
		isolation: isolate;
	}

	.hero img {
		aspect-ratio: 5 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 1.5rem;
		display: block;
		width: 100%;
		height: auto;
	}

	.bounding-box {
		position: absolute;
		top: 15%;
		left: 15%;
		width: 70%;
		height: 70%;
		border: 2px solid #00d2ff;
		border-radius: 8px;
		pointer-events: none;
		opacity: 0;
		animation: fadeInBox 0.5s ease-out forwards 1s;
	}

	.bounding-box::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 2px;
		background: #00d2ff;
		box-shadow: 0 0 10px #00d2ff;
		animation: scanLine 3s linear infinite;
	}

	.bbox-label {
		position: absolute;
		top: -24px;
		left: -2px;
		background-color: #00d2ff;
		color: #000;
		font-family: monospace;
		font-size: 0.85rem;
		font-weight: bold;
		padding: 2px 8px;
		border-radius: 4px 4px 0 0;
	}

	.github-status-bubble {
		position: absolute;
		left: 50%;
		bottom: 1rem;
		transform: translateX(-50%) translateY(8px);
		width: min(88%, 18rem);
		padding: 0.88rem 0.95rem;
		border-radius: 1.2rem;
		background:
			conic-gradient(from 190deg at 20% 20%, transparent 0deg, var(--accent-subtle-overlay) 70deg, transparent 150deg),
			radial-gradient(circle at 85% 18%, var(--accent-subtle-overlay), transparent 45%),
			linear-gradient(160deg, var(--gray-999_40), var(--gray-900));
		border: 1px solid var(--gray-700);
		backdrop-filter: blur(12px);
		box-shadow: var(--shadow-sm);
		opacity: 0;
		pointer-events: none;
		overflow: hidden;
		transition: opacity var(--theme-transition), transform var(--theme-transition), box-shadow var(--theme-transition);
	}

	.github-status-bubble::before,
	.github-status-bubble::after {
		content: '';
		position: absolute;
		border-radius: 999rem;
		pointer-events: none;
	}

	.github-status-bubble::before {
		inset: 0.4rem;
		border: 1px dashed var(--gray-700);
		opacity: 0.55;
		animation: hudSpin 8s linear infinite;
	}

	.github-status-bubble::after {
		width: 6rem;
		height: 0.9rem;
		left: calc(50% - 3rem);
		bottom: 0.55rem;
		background: linear-gradient(90deg, transparent, var(--accent-regular), transparent);
		opacity: 0.35;
		animation: sweep 2.6s ease-in-out infinite;
	}

	.hero-image-container:hover .bounding-box,
	.hero-image-container:focus-within .bounding-box {
		animation-duration: 0.25s;
	}

	.hero-image-container:hover .github-status-bubble,
	.hero-image-container:focus-within .github-status-bubble {
		opacity: 1;
		transform: translateX(-50%) translateY(0);
		box-shadow: var(--shadow-md);
		animation: cloudFloat 2.2s ease-in-out infinite, hudPulse 2.4s ease-in-out infinite;
	}

	.status-heading,
	.status-presence,
	.status-metrics {
		display: flex;
		align-items: center;
		gap: 0.4rem;
		line-height: 1.3;
	}

	.status-heading {
		font-size: 0.78rem;
		font-weight: 600;
		color: var(--gray-100);
		margin-bottom: 0.35rem;
		position: relative;
		z-index: 1;
		letter-spacing: 0.03em;
	}

	.status-presence {
		font-size: 0.8rem;
		color: var(--gray-200);
		position: relative;
		z-index: 1;
	}

	.status-metrics {
		margin-top: 0.25rem;
		font-size: 0.73rem;
		color: var(--gray-300);
		position: relative;
		z-index: 1;
		flex-wrap: wrap;
	}

	.status-dot {
		width: 0.55rem;
		height: 0.55rem;
		border-radius: 999rem;
		background: var(--accent-light);
		box-shadow: 0 0 0 3px var(--gray-999_40);
		animation: statusPulse 1.8s ease-in-out infinite;
	}

	@keyframes fadeInBox {
		to { opacity: 1; }
	}

	@keyframes scanLine {
		0% { top: 0; opacity: 0; }
		10% { opacity: 1; }
		90% { opacity: 1; }
		100% { top: 100%; opacity: 0; }
	}

	@keyframes cloudFloat {
		0%,
		100% {
			transform: translateX(-50%) translateY(0);
		}
		50% {
			transform: translateX(-50%) translateY(-4px);
		}
	}

	@keyframes statusPulse {
		0%,
		100% {
			box-shadow: 0 0 0 0 var(--gray-999_40);
		}
		50% {
			box-shadow: 0 0 0 6px transparent;
		}
	}

	@keyframes hudSpin {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	@keyframes sweep {
		0%,
		100% {
			opacity: 0.2;
			transform: translateX(-16px);
		}
		50% {
			opacity: 0.5;
			transform: translateX(16px);
		}
	}

	@keyframes hudPulse {
		0%,
		100% {
			border-color: var(--gray-700);
		}
		50% {
			border-color: var(--accent-regular);
		}
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			flex-wrap: wrap;
			justify-content: flex-start;
			gap: 0.5rem;
		}

		.hero-image-container {
			border-radius: 4.5rem;
		}

		.github-status-bubble {
			bottom: 1.5rem;
		}

		.hero img {
			aspect-ratio: 3 / 4;
			border-radius: 4.5rem;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

	.mention-card {
		position: relative;
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: var(--gray-300);
		background: var(--gradient-subtle);
		box-shadow: var(--shadow-sm);
		overflow: hidden;
	}

	.bbox-overlay {
		position: absolute;
		top: 4px;
		left: 4px;
		right: 4px;
		bottom: 4px;
		border: 2px solid #00d2ff;
		border-radius: 8px;
		pointer-events: none;
		opacity: 0;
		z-index: 2;
		transition: opacity var(--theme-transition);
	}

	.cv-bbox-hover:hover .bbox-overlay {
		opacity: 1;
	}

	.cv-bbox-hover:hover .bbox-overlay::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 2px;
		background: #00d2ff;
		box-shadow: 0 0 10px #00d2ff;
		animation: scanLine 2s linear infinite;
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: 1.5rem;
			height: 9.5rem;
		}
	}
</style>
