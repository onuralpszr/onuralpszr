---
import { getCollection } from 'astro:content';
import CallToAction from '../components/CallToAction.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Skills from '../components/Skills.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Hello, I'm Onuralp Sezer"
					tagline="Senior Machine Learning Engineer at Ultralytics, building state-of-the-art computer vision solutions with YOLO. Passionate about Deep Learning, MLOps, and Open Source."
					align="start"
				>
					<div class="roles">
						<Pill><Icon icon="brain" size="1.33em" /> ML Engineer</Pill>
						<Pill><Icon icon="eye" size="1.33em" /> Computer Vision</Pill>
						<Pill><Icon icon="code" size="1.33em" /> Open Source</Pill>
					</div>
				</Hero>

				<div class="hero-image-container">
					<img
						alt="Onuralp Sezer - Senior Machine Learning Engineer"
						width="480"
						height="620"
						src="https://github.com/onuralpszr.png"
					/>
					<div class="bounding-box">
						<span class="bbox-label">ML_Engineer 0.99</span>
					</div>
				</div>
			</header>

			<Skills />
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Featured Projects</h3>
					<p>Some of the key projects I've contributed to and maintained in the ML/CV space.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						View All
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>

			<section class="section with-background bg-variant">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Community & Open Source</h3>
					<p>
						Active contributor to Fedora Project, GDG Samsun organizer, and Hacktoberfest participant.
					</p>
				</header>

				<div class="gallery">
					<Grid variant="small">
						{
							['Ultralytics', 'Fedora Project', 'openSUSE', 'OpenCV', 'GDG Samsun', 'Hacktoberfest', 'SAHI'].map((brand) => (
								<li class="mention-card cv-target cv-bbox-hover">
									<div class="bbox-overlay"></div>
									<p>{brand}</p>
								</li>
							))
						}
					</Grid>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.roles {
		margin-top: 0.5rem;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.5rem;
	}

	.hero-image-container {
		position: relative;
		display: inline-block;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	.hero img {
		aspect-ratio: 5 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 1.5rem;
		display: block;
		width: 100%;
		height: auto;
	}

	.bounding-box {
		position: absolute;
		top: 15%;
		left: 15%;
		width: 70%;
		height: 70%;
		border: 2px solid #00d2ff;
		border-radius: 8px;
		pointer-events: none;
		opacity: 0;
		animation: fadeInBox 0.5s ease-out forwards 1s;
	}

	.bounding-box::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 2px;
		background: #00d2ff;
		box-shadow: 0 0 10px #00d2ff;
		animation: scanLine 3s linear infinite;
	}

	.bbox-label {
		position: absolute;
		top: -24px;
		left: -2px;
		background-color: #00d2ff;
		color: #000;
		font-family: monospace;
		font-size: 0.85rem;
		font-weight: bold;
		padding: 2px 8px;
		border-radius: 4px 4px 0 0;
	}

	@keyframes fadeInBox {
		to { opacity: 1; }
	}

	@keyframes scanLine {
		0% { top: 0; opacity: 0; }
		10% { opacity: 1; }
		90% { opacity: 1; }
		100% { top: 100%; opacity: 0; }
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			flex-wrap: wrap;
			justify-content: flex-start;
			gap: 0.5rem;
		}

		.hero-image-container {
			border-radius: 4.5rem;
		}

		.hero img {
			aspect-ratio: 3 / 4;
			border-radius: 4.5rem;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

	.mention-card {
		position: relative;
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: var(--gray-300);
		background: var(--gradient-subtle);
		box-shadow: var(--shadow-sm);
		overflow: hidden;
	}

	.bbox-overlay {
		position: absolute;
		top: 4px;
		left: 4px;
		right: 4px;
		bottom: 4px;
		border: 2px solid #00d2ff;
		border-radius: 8px;
		pointer-events: none;
		opacity: 0;
		z-index: 2;
		transition: opacity var(--theme-transition);
	}

	.cv-bbox-hover:hover .bbox-overlay {
		opacity: 1;
	}

	.cv-bbox-hover:hover .bbox-overlay::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 2px;
		background: #00d2ff;
		box-shadow: 0 0 10px #00d2ff;
		animation: scanLine 2s linear infinite;
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: 1.5rem;
			height: 9.5rem;
		}
	}
</style>
